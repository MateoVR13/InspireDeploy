{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/server.js",
      "headers": {
        "Cache-Control": "no-store",
        "Set-Cookie": "Path=/; HttpOnly; Secure; SameSite=Lax"
      }
    }
  ]
}